# ============================================
# COMPARISON & RANKING
# ============================================

function compare_numbers(a, b, c)
    print("\n=== COMPARING THREE NUMBERS ===")
    print("Numbers: " + str(a) + ", " + str(b) + ", " + str(c))
    
    let smallest = min(a, b, c)
    let largest = max(a, b, c)
    let total = a + b + c
    let average = total / 3
    
    print("Smallest:  " + str(smallest))
    print("Largest:   " + str(largest))
    print("Sum:       " + str(total))
    print("Average:   " + str(average))
    
    if a == b and b == c
        print("Result:    All numbers are equal")
    elif a == b or b == c or a == c
        print("Result:    Two numbers are equal")
    else
        print("Result:    All numbers are different")
    end
end

