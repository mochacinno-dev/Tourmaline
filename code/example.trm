function generate_multiplication_table(number, up_to)
    print("\nMultiplication table for " + str(number) + ":")
    let i = 1
    
    while i <= up_to
        let result = number * i
        print("  " + str(number) + " x " + str(i) + " = " + str(result))
        i += 1
    end
end

function count_divisors(num)
    print("\nDivisors of " + str(num) + ":")
    let count = 0
    let i = 1
    
    while i <= num
        if num % i == 0
            print("  " + str(i))
            count += 1
        end
        i += 1
    end
    
    print("Total divisors: " + str(count))
end

