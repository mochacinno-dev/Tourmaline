# ============================================
# MATHEMATICAL FUNCTIONS
# ============================================

function calculate_factorial(n)
    if n <= 1
        return 1
    end
    
    let result = 1
    let i = 2
    
    while i <= n
        result *= i
        i += 1
    end
    
    print("Factorial of " + str(n) + " = " + str(result))
end

function is_prime(num)
    if num < 2
        return false
    end
    
    if num == 2
        return true
    end
    
    let i = 2
    while i * i <= num
        if num % i == 0
            return false
        end
        i += 1
    end
    
    return true
end

function find_primes_up_to(limit)
    print("\nPrime numbers up to " + str(limit) + ":")
    let count = 0
    let num = 2
    
    while num <= limit
        if is_prime(num)
            print("  " + str(num))
            count += 1
        end
        num += 1
    end
    
    print("Total primes found: " + str(count))
end

function fibonacci_sequence(n)
    print("\nFibonacci sequence (first " + str(n) + " numbers):")
    
    if n >= 1
        print("  1: 0")
    end
    
    if n >= 2
        print("  2: 1")
    end
    
    if n > 2
        let prev = 0
        let curr = 1
        let pos = 3
        
        while pos <= n
            let next = prev + curr
            print("  " + str(pos) + ": " + str(next))
            prev = curr
            curr = next
            pos += 1
        end
    end
end

function calculate_power_series(base, max_power)
    print("\nPower series for " + str(base) + ":")
    let power = 0
    
    while power <= max_power
        let result = pow(base, power)
        print("  " + str(base) + "^" + str(power) + " = " + str(result))
        power += 1
    end
end

# ============================================
# STATISTICAL ANALYSIS FUNCTIONS
# ============================================

function calculate_sum(numbers)
    let total = 0
    for num in numbers
        total += num
    end
    return total
end

function calculate_average(numbers)
    let sum = calculate_sum(numbers)
    let count = len(numbers)
    return sum / count
end

function find_minimum(numbers)
    let minimum = numbers[0]
    for num in numbers
        if num < minimum
            minimum = num
        end
    end
    return minimum
end

function find_maximum(numbers)
    let maximum = numbers[0]
    for num in numbers
        if num > maximum
            maximum = num
        end
    end
    return maximum
end

function calculate_range(numbers)
    let min_val = find_minimum(numbers)
    let max_val = find_maximum(numbers)
    return max_val - min_val
end

function analyze_dataset(numbers, dataset_name)
    print("\n=== ANALYSIS: " + dataset_name + " ===")
    print("Dataset: " + str(numbers))
    print("----------------------------------------")
    
    let sum = calculate_sum(numbers)
    let avg = calculate_average(numbers)
    let min_val = find_minimum(numbers)
    let max_val = find_maximum(numbers)
    let range_val = calculate_range(numbers)
    let count = len(numbers)
    
    print("Count:      " + str(count) + " values")
    print("Sum:        " + str(sum))
    print("Average:    " + str(avg))
    print("Minimum:    " + str(min_val))
    print("Maximum:    " + str(max_val))
    print("Range:      " + str(range_val))
    
    # Determine data characteristics
    if avg > 50
        print("Status:     HIGH average")
    elif avg > 25
        print("Status:     MEDIUM average")
    else
        print("Status:     LOW average")
    end
end

# ============================================
# GEOMETRIC CALCULATIONS
# ============================================

function calculate_circle_area(radius)
    let pi = 3.14159
    let area = pi * radius * radius
    print("Circle with radius " + str(radius) + ":")
    print("  Area = " + str(area))
    print("  Circumference = " + str(2 * pi * radius))
end

function calculate_triangle_area(base, height)
    let area = base * height / 2
    print("Triangle (base=" + str(base) + ", height=" + str(height) + "):")
    print("  Area = " + str(area))
end

function calculate_rectangle_properties(width, height)
    let area = width * height
    let perimeter = 2 * width + 2 * height
    let diagonal = sqrt(width * width + height * height)
    
    print("Rectangle (" + str(width) + " x " + str(height) + "):")
    print("  Area:      " + str(area))
    print("  Perimeter: " + str(perimeter))
    print("  Diagonal:  " + str(diagonal))
end

